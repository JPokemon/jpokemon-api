function(jPokemon) {
  jPokemon.ContestCategory = function ContestCategory() {
    this.name = null;
    this.flavor = null;
    this.color = null;
    this.stat = null;
    this.reactions = {};
  }

  var statics = ContestCategory,
      exports = ContestCategory.prototype;

  statics.manager = null;
  statics.EXCITEMENT_REACTION = "EXCITEMENT";
  statics.INDIFFERENCE_REACTION = "INDIFFERENCE";
  statics.DISCONTENT_REACTION = "DISCONTENT";

  exports.getName = function() {
    return this.name;
  };

  exports.setName = function(name) {
    this.name = name;
    return this;
  };

  exports.getFlavor = function() {
    return this.flavor;
  };

  exports.setFlavor = function(flavor) {
    this.flavor = flavor;
  };

  exports.getColor = function() {
    return this.color;
  };

  exports.setColor = function(color) {
    this.color = color;
    return this;
  };

  exports.getStat = function() {
    return this.stat;
  };

  exports.setStat = function(stat) {
    this.stat = stat;
    return this;
  };

  exports.isExcitementReaction = function() {
    return this.reactions[contestCategory] === statics.EXCITEMENT_REACTION;
  };

  exports.getExcitementReactions = function() {
    return getReactions(this, statics.EXCITEMENT_REACTION);
  };

  exports.setExcitementReaction = function(contestCategories) {
    setReactions(this, contestCategories, statics.EXCITEMENT_REACTION);
    return this;
  };

  exports.isIndifferenceReaction = function(contestCategory) {
    return this.reactions[contestCategory] === statics.INDIFFERENCE_REACTION;
  }

  exports.getIndifferenceReactions = function() {
    return getReactions(this, statics.INDIFFERENCE_REACTION);
  };

  exports.setIndifferenceReaction = function(contestCategories) {
    setReactions(this, contestCategories, statics.INDIFFERENCE_REACTION);
    return this;
  };

  exports.isDiscontentReaction = function(contestCategory) {
    return this.reactions[contestCategory] === statics.DISCONTENT_REACTION;
  }

  exports.getDiscontentReactions = function() {
    return getReactions(this, statics.DISCONTENT_REACTION);
  };

  exports.setDiscontentReaction = function(contestCategories) {
    setReactions(this, contestCategories, statics.DISCONTENT_REACTION);
    return this;
  };

  exports.getProperties = function() {
    return this.properties;
  };

  exports.setProperties = function(properties) {
    this.properities = properities;
    return this;
  };

  function getReactions(me, reaction) {
    var contestCategories = Object.keys(me.reactions),
        list = [];

    for (var index in contestCategories) {
      var contestCategory = contestCategories[index];

      if (reaction === me.reactions[contestCategory]) {
        list.push(contestCategory);
      }
    }

    return list;
  };

  function setReactions(me, contestCategories, reaction) {
    if (typeof contestCategories === 'string') {
      contestCategories = [contestCategories];
    }

    for (var index in contestCategories) {
      me.reactions[contestCategories[index]] = reaction;
    }
  };
}(window.jPokemon = window.jPokemon || {});
